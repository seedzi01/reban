<?xml version="1.0" encoding="utf-8"?>
<com.reban.widget.TitleBar  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_heigt"
    android:background="@color/color_titlebar_background"
    android:orientation="vertical" >
    
<ImageView 
    android:id="@+id/back"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content"        
    android:layout_marginLeft="@dimen/item_margin_normal"
    android:visibility="gone"
    android:src="@drawable/back"/>    
	<LinearLayout 
	    android:id="@+id/center_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:visibility="gone"><!--   -->
	    <TextView 
	        android:id="@+id/login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:gravity="center"/>
	    <TextView 
	        android:id="@+id/register"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:gravity="center"/>
	</LinearLayout>

<TextView 
    android:id="@+id/title"
    android:textSize="20sp"
    android:textColor="#727272"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    
<RelativeLayout 
      android:id="@+id/right_root"
          android:layout_gravity="center_vertical"
         android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone">
	<ImageButton 
    android:id="@+id/comment"
    android:layout_alignParentRight="true"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"        
    android:layout_marginRight="@dimen/item_margin_normal"/>        
    <ImageButton 
    android:id="@+id/share"
    android:layout_toLeftOf="@id/comment"
    android:layout_gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"        
    android:layout_marginRight="@dimen/item_margin_normal"/>


</RelativeLayout>



</com.reban.widget.TitleBar>
