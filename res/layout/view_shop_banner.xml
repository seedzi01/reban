<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp" >

    <ImageView
        android:id="@+id/banner_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout 
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView 
            android:id="@+id/origin_price"
            android:textColor="#b1b1b1"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/discount"
            android:gravity="bottom"
            android:textColor="#ff4305"
            android:textSize="32sp"
            android:layout_marginRight="6dp"
            android:layout_toLeftOf="@id/origin_price"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/mark"
            android:gravity="bottom"
            android:textColor="#ff4305"
            android:textSize="22sp"
            android:layout_toLeftOf="@id/discount"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView 
            android:id="@+id/desc"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:layout_marginRight="4dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/mark"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/title"
            android:layout_above="@id/desc"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </RelativeLayout>

</FrameLayout>