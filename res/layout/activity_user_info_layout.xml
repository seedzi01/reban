<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#eeeeee"
    xmlns:app="http://schemas.android.com/apk/res/com.erban">
    <!-- 防止edittext自动活取焦点 -->
    <LinearLayout
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="0px" android:layout_height="0px">
        <requestFocus />
    </LinearLayout>
    
    <include layout="@layout/title_bar_layout"/>
    
    
    	<!-- 第一部分 -->
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"   
        android:background="@color/color_white">
    <RelativeLayout 
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        
        <com.erban.widget.CircleImageView 
            android:id="@+id/user_icon"
        	android:layout_width="50dp"
            android:layout_height="50dp"           
            app:border_width="3dp"
            app:border_color="#ffffff"/>
        <LinearLayout 
        android:layout_toRightOf="@id/user_icon"    
        android:layout_marginLeft="10dp"    
  		android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
            <TextView 
                android:id="@+id/user_name"
                android:text=""
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textColor="#373737"/>
             <TextView 
                 android:id="@+id/vip_txt"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="11sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textColor="#373737"/>           
        </LinearLayout>
    </RelativeLayout>
    <View  
        android:paddingLeft="15dp"
        android:layout_height="1px"       
        android:background="#f2f2f2"
        android:layout_width="match_parent"/>

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp">
        <TextView 
            android:id="@+id/grade_left"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="center|left"
            android:textColor="#969696"
            android:text="普通会员"/>
  		<TextView 
  		    android:id="@+id/grade_right"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="center|right"
            android:textColor="#969696"
            android:text="砖石会员"/>
  		<LinearLayout 
  		    android:layout_toRightOf="@id/grade_left"
  		    android:layout_toLeftOf="@id/grade_right"
  			android:layout_width="match_parent"
        	android:layout_height="wrap_content"
  		    android:weightSum="2">
    	<TextView 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#969696"
            android:gravity="center"
            android:text="银牌会员"/>
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#969696"
            android:gravity="center"
            android:text="金牌会员"/>
  		</LinearLayout>


    </RelativeLayout>
    
    <com.xiaomei.yanyu.widget.VipGradeView
        android:id="@+id/vip_grade"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp" 
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
  		android:layout_height="wrap_content"
  		android:layout_width="match_parent"      
        >
        <TextView 
            android:id="@+id/cost"
            android:textSize="13sp"
            android:textColor="#373737"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""/>
        
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/user_type_desc"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:textSize="13sp"
        android:textColor="#373737"
        />
</LinearLayout>

    	<!-- 第二部分 -->
    
		<LinearLayout 
		    android:layout_marginTop="10dp"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp"
		    android:background="@color/color_white">
		    
		    <!-- 1行 -->
		    <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		     	android:paddingTop="15dp"
		    	android:paddingBottom="15dp">
		        <TextView 
		            android:id="@+id/nick_txt"
		            android:text="昵称"
		            android:textColor="#373737"
		            android:textSize="16sp"
		            android:layout_centerVertical="true"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentLeft="true"/>
		        
			 	<EditText
			 	    android:id="@+id/nick_name"
			 	    android:layout_centerVertical="true"
			 	    android:gravity="right"
			 	    android:layout_toRightOf="@id/nick_txt" 
		            android:text="美美嗒"
		            android:textColor="#969696"
		            android:textSize="15sp"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentRight="true"
		             android:maxLines="1" 
		             android:background="@null"/>
		    </RelativeLayout>
		        <View  
		        android:layout_height="1px"       
		        android:background="#f2f2f2"
		        android:layout_width="match_parent"/>
		    		    <!-- 2行 -->
		       <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		     	android:paddingTop="15dp"
		    	android:paddingBottom="15dp">
		        <TextView 
                    android:layout_centerVertical="true"
		            android:id="@+id/link_txt"
		            android:text="联系方式"
		            android:textColor="#373737"
		            android:textSize="16sp"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentLeft="true"/>
		        
			 	<EditText 
			 	    android:layout_centerVertical="true"
			 	    android:id="@+id/link"
			 	    android:layout_toRightOf="@id/link_txt" 
		            android:text=""
		            android:textColor="#969696"
		            android:textSize="15sp"
		            android:gravity="right"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentRight="true"
		            android:maxLines="1" 
		            android:background="@null"/>
		    </RelativeLayout>
		            <View  
		        android:layout_height="1px"       
		        android:background="#f2f2f2"
		        android:layout_width="match_parent"/>
		            
		             		    <!--3行 -->
		       <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		     	android:paddingTop="15dp"
		    	android:paddingBottom="15dp">
		        <TextView 
		            android:id="@+id/sheng_fen_zheng_hao_txt"
		            android:text="身份证号"
		            android:textColor="#373737"
		            android:textSize="16sp"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:layout_centerVertical="true"/>
		        
			 	<EditText
			 	    android:id="@+id/sheng_fen_zheng_hao" 
		            android:text=""
		            android:textColor="#969696"
		            android:textSize="15sp"
		            android:gravity="right"
		            android:layout_toRightOf="@id/sheng_fen_zheng_hao_txt"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:background="@null"/>
		    </RelativeLayout>
		              <View  
		        android:layout_height="1px"       
		        android:background="#f2f2f2"
		        android:layout_width="match_parent"/>
		            
		             		    <!--4行 -->
		       <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		     	android:paddingTop="15dp"
		    	android:paddingBottom="15dp">
		        <TextView 
		            android:id="@+id/location_txt"
		            android:text="详细地址"
		            android:layout_centerVertical="true"
		            android:textColor="#373737"
		            android:textSize="16sp"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentLeft="true"/>
		        
			 	<EditText 
			 	    android:id="@+id/location"
			 	    android:layout_centerVertical="true"
			 	    android:gravity="right"
			 	    android:layout_toRightOf="@id/location_txt"
		            android:text=""
		            android:textColor="#969696"
		            android:textSize="15sp"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            android:layout_alignParentRight="true"
		            android:background="@null"/>
		    </RelativeLayout>
		       
		</LinearLayout>
    
		  <!-- 第三部分 -->
			<TextView 
			    android:id="@+id/loginout"
			    android:layout_marginTop="10dp"
			    android:paddingLeft="15dp"
			    android:paddingTop="15dp"
			    android:paddingBottom="15dp"
			    android:text="退出登录"
				android:textColor="#373737"
		        android:textSize="16sp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:background="@color/color_white"/>
    </LinearLayout>