<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#eeeeee">
    
<include android:id="@+id/titlebar"  layout="@layout/title_bar_layout"/>
<View
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:background="#f2f2f2" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/color_white" >

<EditText
    android:id="@+id/edit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/cancel"
    android:layout_marginLeft="@dimen/item_margin_normal"
    android:background="@null"/>

<ImageView
    android:id="@+id/cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/item_margin_normal"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="@dimen/item_margin_normal"
    android:src="@drawable/user_input_cancel_selector" />


</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_alignParentBottom="true"
    android:background="#f2f2f2" />
    
<TextView 
    android:layout_marginTop="17dp"
    android:layout_marginLeft="20dp"
    android:textSize="13sp"
    android:text="请输入15位以内的中文英文和数字的组合"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#808080"/>
</LinearLayout>
