<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wifi_card_nomal"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/wifi_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/wifi_need_password_icon" />

    <ImageView
        android:id="@+id/wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/wifi_strength" />

    <TextView
        android:id="@+id/wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/wifi_strength"
        android:layout_toRightOf="@id/wifi_type"
        android:textColor="#404040"
	    android:textSize="15dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="CMCT-CHINACOMMM" />"
    
    <View 
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wifi_count_line"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
